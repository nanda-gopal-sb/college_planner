<section class="subject-form">
  <h3>Add New Subject</h3>
  <%= form_with model: @subject do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :Code %>
    <%= f.text_field :subject_code %>
    <br>
    <%= f.label :Credits %>
    <%= f.text_field :credits %>
    <br>
     <%= f.label :Professor %>
    <%= f.text_field :professor %>
    <br>
    <%= f.label :semester_id, "Select Semester" %>
    <%= f.collection_select :semester_id, @semesters, :id, :name %>
    <br>
    <%= f.submit %>
  <% end %>
</section>
<section class="semester-list">
  <h3>Subjects of Each semester</h3>
  <ul>
    <% @semesters.each do |semester| %>
      <li>
        <%= semester.name %>
        <% semester.subjects.each do |subject| %>
          <ol>
            <%= subject.name %>
          </ol>
        <% end %>
      </li>
    <% end %>
  </ul>
</section>